@model IEnumerable<StudentGrades.Models.Subject>
@{
    Layout = "_Layout";
}

<h2>Subjects</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="mb-3">
    <a class="btn btn-primary me-2" href="/Subjects/Create"><i class="bi bi-plus-circle"></i> Add Subject</a>
    <a class="btn btn-secondary" href="/">Back</a>
</div>

<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Subject Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.SubjectName</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Subjects/Edit/@s.SubjectKey"><i class="bi bi-pencil"></i> Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Subjects/Delete/@s.SubjectKey"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
