@model IEnumerable<StudentGrades.Models.Student>
@{
    Layout = "_Layout";
}

<h2>Students</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input class="form-control" name="search" placeholder="Search by student name" value="@ViewBag.Search" />
    </div>
    <div class="col-auto">
        <select name="filter" class="form-select" asp-items="ViewBag.FilterList"></select>
    </div>
    <div class="col-auto">
        <button class="btn btn-secondary"><i class="bi bi-funnel"></i> Apply</button>
        <a class="btn btn-outline-secondary" href="/Students"><i class="bi bi-x-circle"></i> Reset</a>
    </div>
</form>

<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Subject</th>
            <th>Grade</th>
            <th>Remarks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var s in Model) {
            <tr class="@(s.Grade < 75 ? "fail" : "")">
                <td>@s.StudentName</td>
                <td>@(s.Subject?.SubjectName ?? "-")</td>
                <td>@s.Grade</td>
                <td>@(s.Grade >= 75 ? "PASS" : "FAIL")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@s.StudentKey"><i class="bi bi-pencil"></i> Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Students" asp-action="Delete" asp-route-id="@s.StudentKey"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
