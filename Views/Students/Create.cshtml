@model StudentGrades.Models.Student
@{
    Layout = "_Layout";
}

<h2>Add Student</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Student Name</label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Subject</label>
        <select asp-for="SubjectKey" class="form-select" asp-items="ViewBag.SubjectList">
            <option value="">-- Select --</option>
        </select>
        <span asp-validation-for="SubjectKey" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Grade</label>
        <input asp-for="Grade" class="form-control" type="number" min="0" max="100" id="GradeInput" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Remarks (auto)</label>
        <input id="Remarks" class="form-control" readonly />
    </div>

    <button class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-controller="Students" asp-action="Index">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Auto-update Remarks based on Grade input
        document.getElementById('GradeInput').addEventListener('input', function () {
            var v = parseInt(this.value) || 0;
            document.getElementById('Remarks').value = v >= 75 ? 'PASS' : 'FAIL';
        });
    </script>
}
